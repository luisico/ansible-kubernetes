apiVersion: operator.tigera.io/v1
kind: Installation
metadata:
  name: default
spec:
  registry: quay.io
  calicoNetwork:
    bgp: Disabled
    ipPools:
    - blockSize: 26
      cidr: {{ kubernetes_pod_cidr }}
      encapsulation: VXLANCrossSubnet
      natOutgoing: Enabled
      nodeSelector: all()
